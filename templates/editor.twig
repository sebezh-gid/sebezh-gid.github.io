{% extends "base.twig" %}

{% block page_title %}re:{{ page_name }} — гид по Себежу{% endblock %}

{% block page_h1 %}{% if is_editable %}Редактирование страницы «{{ page_name }}»{% else %}Исходный код страницы «{{ page_name }}»{% endif %}{% endblock %}

{% block page_contents %}
 <form class="pedit" method="post" action="/edit">
  <input type="hidden" name="page_name" value="{{ page_name }}"/>

  <textarea class="form-control wiki" name="page_source" autofocus="autofocus"{% if not is_editable %} readonly="readonly"{% endif %}>{{ page_source }}</textarea>

  {% if is_editable %}
    <div class="form-actions">
     <button class="btn btn-primary">Сохранить</button> или <a href="/wiki?name={{ page_name }}">оставить как есть</a> &middot; <a href="/wiki?name=Памятка+редактора" target="_blank">памятка редактора</a>
     <a class="btn btn-default tool lsep" href="/upload" target="_blank" title="Загрузить фото"><i class="fa fa-image"></i></a>
     <a class="btn btn-default tool" href="#map" title="Вставить заготовку фотоальбома"><i class="fa fa-images"></i></a>
     <a class="btn btn-default tool" href="/wiki?name=Как вставить карту" title="Вставить карту" target="_blank"><i class="fa fa-map-marker"></i></a>
    </div>
  {% endif %}
 </form>

<form id="dlgUploadPhoto" class="dlg async" title="Добавление фотографии" method="post" action="/upload" style="display: none">
    <div class="field-group">
        <label class="btn btn-default">Выбери файл<input id="filePhoto" type="file" name="file" accept="image/jpeg, image/png, image/gif" style="display: none"/></label>
    </div>
    <div class="orsep"><span>или</span></div>
    <div class="field-group">
        <input type="text" name="link" class="form-control" id="dlgUploadLink" placeholder="Вставь ссылку на картинку" autocomplete="off"/>
    </div>
    <p class="msgbox" style="display: none"></p>
</form>

{% endblock %}
